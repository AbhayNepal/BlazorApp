@page "/"

<PageTitle>Index</PageTitle>

<style>

    .tab{
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
    }
    .tab button{
        background-color: inherit;
        float: left;
        border:none;
        outline:none;
        cursor:pointer;
        padding:14px 16px;
        transition: 0.3s;
        font -size : 19px;

    }
    .tab button:hover{
        background-color: #ddd;
    }
    .tabcontent{
        padding: 6px 12px;
        border: 1px solid black;
        border-top: none;
    }
</style>

<div class="tab">
    <button
        style="@(tab1?"background-color: black;color:white":"")"
        @onclick="(x=>DisplayTab(1))">Basic Info</button>
    <button style="@(tab2?"background-color: black;color:white":"")"
            @onclick="(x=>DisplayTab(2))">Company Info</button>
    <button style="@(tab3?"background-color: black;color:white":"")"
            @onclick="(x=>DisplayTab(3))">PF Info</button>
</div>
@if(tab1)
{
    <div class="tabcontent">
        <h3>tab1</h3>
    </div>
}

@if (tab2)
{
    <div class="tabcontent">
             <h3>tab2</h3>
    </div>
}

@if (tab3)
{
    <div class="tabcontent">
        <h3>tab3</h3>
    </div>
}
@code{
    private bool tab1 = true;
    private bool tab2 = false;
    private bool tab3 = false;

    public void DisplayTab(int TabNumber){
        switch (TabNumber)
        {
            case 1:
                this.tab1 = true;
                this.tab2 = false;
                this.tab3 = false;
                break;
            case 2:
                this.tab1 = false;
                this.tab2 = true;
                this.tab3 = false;
                break;

            case 3:
                this.tab1 = false;
                this.tab2 = false;
                this.tab3 = true;
                break;

        }
    }
}